extends layout

block content 
    h1 New Book
    form(method='post')
        if (error)
            h2(class='error') Oooops!
            ul(class='error')
                if (!book.title)
                    li Name is required 
                if (!book.author)
                    li Author is required
        p 
            label(for='title') Title 
            input(name='title' type='text' id='title' value= error ? `${book.title}` : '') 
        p 
            label(for='author') Author 
            input(name="author" type="text" id="author" value= error ? `${book.author}` : '')
        p 
            label(for='genre') Genre 
            input(name="genre" type="text" id="genre" value= error ? `${book.genre}` : '')
        p 
            label(for='year') Year 
            input(name="year" type="text" id="year" value= error ? `${book.year}` : '')
        p 
            input(type="submit" value="Create New Book")
        p 
            a(class="button" href="/") Cancel

            